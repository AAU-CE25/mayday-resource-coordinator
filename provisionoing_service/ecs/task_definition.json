[
  {
    "name": "api",
    "image": "myrepo/api:latest",
    "essential": true,
    "portMappings": [{"containerPort": 8080, "protocol": "tcp"}]
  },
  {
    "name": "pdb",
    "image": "postgres:18",
    "essential": true,
    "environment": [{"name": "POSTGRES_DB", "value": "userdb"}],
    "mountPoints": [{"sourceVolume": "user-volume", "containerPath": "/var/lib/postgresql/data"}]
  }
]
